                    cancel: "Cancelar",
                    current: "Actual",
                    finish: "Finalizar",
                    next: "Siguiente",
                    previous: "Anterior",
                    loading: "Cargando..."
                },
                onStepChanged: function (event, currentIndex, priorIndex) {
                    if (currentIndex === 1) {
                        var firstVal = $('#FirstQuestionId').val();
                        var secondVal = $('#SecondQuestionId').val();
                        
                        if (firstVal !== "" && secondVal === firstVal) {
                            $('#SecondQuestionId').val("");
                        }
                    } else if (currentIndex === 2) {
                        var firstVal = $('#FirstQuestionId').val();
                        var secondVal = $('#SecondQuestionId').val();
                        var thirdVal = $('#ThirdQuestionId').val();
                        
                        if ((firstVal !== "" && thirdVal === firstVal) || (secondVal !== "" && thirdVal === secondVal)) {
                            $('#ThirdQuestionId').val("");
                        }
                    }
                },
                onStepChanging: function (event, currentIndex, newIndex) {
                    if (currentIndex > newIndex) {
                        return true;
                    }
                    var form = $(this);
                    form.validate().settings.ignore = ":disabled,:hidden";
                    return form.valid();
                },
                onFinishing: function (event, currentIndex) {
                    var form = $(this);
                    form.validate().settings.ignore = ":disabled";
                    return form.valid();
                },
                onFinished: function (event, currentIndex) {
                    $(this).submit();
