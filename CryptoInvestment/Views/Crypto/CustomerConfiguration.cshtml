                if ($this.val().length === parseInt($this.attr('maxlength'))) {
                    var $next = $this.next('.pin-input');

                    if ($next.length) {
                        $next.val(''); // Limpia el valor del siguiente input
                        $next.focus(); // Enfoca el siguiente input
                    } else {
                        // Mover el foco al primer .confirm-pin-input
                        var $firstConfirmInput = $('.confirm-pin-input').first();
                        if ($firstConfirmInput.length) {
                            $firstConfirmInput.val(''); // Limpia el valor del primer .confirm-pin-input
                            $firstConfirmInput.focus(); // Enfoca el primer .confirm-pin-input
                        }
                    }
                }
            });

            $('.confirm-pin-input').on('input', function () {
                var $this = $(this);
                // Permitir solo números
                $this.val($this.val().replace(/[^0-9]/g, ''));

                if ($this.val().length === parseInt($this.attr('maxlength'))) {
                    var $next = $this.next('.confirm-pin-input');

                    if ($next.length) {
                        $next.val('');
                        $next.focus();
                    } else {
                        var $focusableElements = $(':input, a[href], area[href], iframe, object, embed, [tabindex], [contenteditable]')
                            .filter(':visible')
                            .not('[tabindex=-1]')
                            .not('.pin-input');

                        var currentIndex = $focusableElements.index(this);
                        var $nextFocusable = $focusableElements.eq(currentIndex + 1);

                        if ($nextFocusable.length) {
                            $nextFocusable.focus();
                        }
                    }
                }
            });

