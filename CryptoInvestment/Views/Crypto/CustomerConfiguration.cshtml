                });

                // Verificar que todos los campos estén completos
                if (password.length < 6 || confirmPassword.length < 6) {
                    e.preventDefault();
                    alert('Por favor, complete todos los dígitos de su PIN.');
                    return;
                }

                    // Comparar las contraseñas
                if (password !== confirmPassword) {
